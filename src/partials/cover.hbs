<section class="section-cover overflow-hidden">
  <div class="container-fluid">
    <div class="row align-items-center gap-5 gap-lg-0">
      <div class="col-12 col-lg-6 z-1">
        <div>
          <div class="display-5 text-gray-900 lh-base fw-bold mb-4">
            {{coverTitle}}
            <span class="bg-brand-500 text-white px-2 rounded-1 py-md-1">{{coverTitleCard}}</span>
            {{or}}
            <span class="bg-brand-500 text-white px-2 rounded-1 py-md-1">{{coverTitleCrypto}}</span>
          </div>
          <div class="h4 text-gray-500">
            {{coverDescription}}
          </div>
          <a class="btn btn-xl btn-gray-800 mt-4" href="https://pay.web.money/d/artg" target="_blank">
            {{demoButton}}
          </a>
        </div>
      </div>
      <div class="col-12 col-lg-6">
        <div class="d-flex justify-content-center">
          <div class="cover-phone w-50 position-relative">
            <img class="img-fluid" src="../assets/images/cover-iphone.png" />
            <div class="levitating-icon levitating-icon--instagram">
              <div class="levitating-icon-wrapper shadow">
                <img class="img-fluid" src="../assets/images/instagram.svg" />
              </div>
            </div>
            <div class="levitating-icon levitating-icon--telegram">
              <div class="levitating-icon-wrapper shadow">
                <img class="img-fluid" src="../assets/images/telegram.svg" />
              </div>
            </div>
            <div class="levitating-icon levitating-icon--tiktok">
              <div class="levitating-icon-wrapper shadow">
                <img class="img-fluid" src="../assets/images/tiktok.svg" />

              </div>
            </div>
            <div class="levitating-icon levitating-icon--youtube">
              <div class="levitating-icon-wrapper shadow">
                <img class="img-fluid" src="../assets/images/youtube.svg" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>